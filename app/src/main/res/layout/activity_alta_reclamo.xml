<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_alta_reclamo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="utn.frsf.com.yoreclamo.Interfaz.AltaReclamo"
    android:scrollIndicators="right"
    android:scrollbarAlwaysDrawHorizontalTrack="false"
    android:scrollbarAlwaysDrawVerticalTrack="false">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:text="Nuevo Reclamo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="24sp"
            android:textColor="@color/cast_intro_overlay_background_color"
            android:textAlignment="center"
            android:paddingTop="5dp"/>

        <TextView
            android:text="Descripcion del reclamo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="18sp"
            android:paddingTop="20dp"
            android:textColor="@color/cast_expanded_controller_background_color"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editText_Titulo"
            android:hint="Ingrese un titulo"
            android:inputType="text"/>

        <TextView
            android:text="Nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textSize="18sp"
            android:paddingTop="15dp"
            android:textColor="@color/cast_intro_overlay_background_color"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_nombre"
            android:hint="Ingrese su nombre"/>

        <TextView
            android:text="Numero de contacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textSize="18sp"
            android:paddingTop="15dp"
            android:textColor="@color/cast_intro_overlay_background_color"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editText_Telefono"
            android:hint="Ingrese un telefono"/>

        <TextView
            android:text="Direccion de correo electrÃ³nico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textSize="18sp"
            android:paddingTop="15dp"
            android:textColor="@color/cast_intro_overlay_background_color"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText_Email"
            android:hint="Ingrese un e-mail"/>

        <TextView
            android:text="Haga click para cargar foto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:paddingTop="10dp"
            android:textAlignment="center"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/common_google_signin_btn_icon_light_normal"
            android:id="@+id/imageView_ImagenReclamo"
            android:layout_weight="10.78"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            >

            <Button
                android:text="Realizar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_RealizarReclamo"
                android:layout_weight="1"/>

            <Button
                android:text="Cancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_CancelarReclamo"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
</RelativeLayout>
